<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpaceX" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_color_primary</item>
        <item name="colorPrimaryVariant">@color/dark_color_primary_variant</item>
        <item name="colorOnPrimary">@color/dark_color_on_primary</item>
        <item name="colorAccent">@color/dark_color_accent</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_color_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_color_secondary_variant</item>
        <item name="colorOnSecondary">@color/dark_color_on_secondary</item>

        <!-- Status bar colors -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="colorControlHighlight">?attr/colorPrimaryVariant</item>

        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="backgroundColor">?attr/colorPrimaryVariant</item>
        <item name="background">?attr/colorPrimaryVariant</item>
        <item name="bcg_picture">@drawable/starlink_dark</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <!-- Makes the toolbar text whatever color you want for both light/dark-->
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Theme.SpaceX.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SpaceX.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SpaceX.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="actionMenuTextColor">@color/dark_color_accent</item>
    </style>

</resources>