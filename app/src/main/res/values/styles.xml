<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Spacex" />

    <style name="Spacex.CompanyInfo">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
    </style>

    <style name="Spacex.CompanyInfo.Name">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4</item>
    </style>

    <style name="Spacex.CompanyInfo.Founded">
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>


    <style name="Spacex.CompanyInfo.Title">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="Spacex.CompanyInfo.Details">
        <item name="android:layout_margin">@dimen/inner_margin</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Spacex.CompanyInfo.Grid">
        <item name="android:columnCount">2</item>
        <item name="android:layout_marginStart">@dimen/big_margin</item>
        <item name="android:layout_marginEnd">@dimen/big_margin</item>
    </style>

    <style name="Spacex.RecyclerList" >
        <item name="android:layout_margin">@dimen/micro_margin</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Spacex.RecyclerList.FlightNo" >
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:paddingTop">@dimen/inner_padding</item>
    </style>

    <style name="Spacex.RecyclerList.Name" >
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Spacex.RecyclerList.Date" >
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:paddingBottom">@dimen/inner_padding</item>
    </style>


    <style name="Spacex.RecyclerList.Icon" >
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
    </style>

</resources>